                .form-text .user-name input,
                .form-text .password input,
                .signup-form-text input {
                  width: 100%;
                  border-radius: 50px;
                  padding: 15px;
                  font-size: 14px;
                  border: 1px solid #e9e9e9;
                  outline: none;
                  color: #495057;
                  margin: 10px 0;
