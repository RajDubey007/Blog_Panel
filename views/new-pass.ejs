    <div id="cursor"></div>
    <div id="stalker"></div>

    <div class="form-wrapper">
        <div class="form-cont">
            <div class="form-title flex align-items center d-flex">
             

                <h2 style="color: white; font-size: 20px; text-align: center;">Lineone - Dashboard</h2>
            </div>
            <div class="form-text">
                <form class="mt-4" action="/newPassWord/<%=id%>" method="post">
    
