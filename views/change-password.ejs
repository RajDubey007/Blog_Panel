<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>change-password</title>
    
               <!-- web-logo -->
               <link rel="short icon" href="assets/images/logo/logo.svg" type="x-icon">
    
               <!-- Logo -->
                   <script src="https://unpkg.com/feather-icons"></script>
       
               <!-- fonts -->
                   <link href="assets/css/fonts.css" rel="stylesheet" type="text/css">
           
               <!-- css-file -->
                   <link href="assets/css/style.css" rel="stylesheet" type="text/css">
           
               <!-- media -->
                   <link href="assets/css/media.css" rel="stylesheet" type="text/css">
           
    </head>

<body>

    <div id="cursor"></div>
    <div id="stalker"></div>
    
    <div class="signup-form-wrapper">
        <div class="form-cont">
            <div class="form-title signup-form-title flex align-items center d-flex">
                <img src="assets/images/logo/logo.svg" alt="logo">

                <h2>Lineone - Dashboard</h2>
            </div>
            <div class="form-text">
                <form class="mt-4" action="/changePasswordData" method="post">
                    <div class="password rel">
                        <input type="password"  name="current_pwd" placeholder="Current Password .."  id="register-password">
                        <a href="#" class="login-icon abs">
                            <i data-feather="lock"></i>
                        </a>
                    </div>
    
                    <div class="password rel">
                        <input type="text" name="new_pwd" placeholder="New Password..."  id="register-password">
                        <a href="#" class="login-icon abs">
                            <i data-feather="save"></i>
                        </a>
                    </div>
    
                    <div class="password rel">
                        <input type="text"  name="con_new_pwd" placeholder="Confirm New Password..."  id="register-password">
                        <a href="#" class="login-icon abs">
                            <i data-feather="save"></i>
                        </a>
                    </div>
                    <div class="login-btn flex align-items center">
                        <button>
                            Change Password
                        </button>
                    </div>
                </form>
            </div>
           
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="jq/jq-script.js"></script>

    <script>
        feather.replace();
    </script>

        <!-- cursor -->
        <script>
            const cursor = document.getElementById("cursor");
         const stalker = document.getElementById("stalker");
         document.addEventListener("mousemove", (event) => {
           const x = event.clientX;
           const y = event.clientY;
           cursor.style.transform = `translate(${x}px, ${y}px)`;
           stalker.style.transform = `translate(${x}px, ${y}px)`;
         });
       </script>
</body>

</html>