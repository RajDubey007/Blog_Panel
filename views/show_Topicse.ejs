<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>View Topics and Subtopics</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Custom Styles -->
  <style>
    body {
      background-color: #f4f6f9;
    }

    .container {
      padding-top: 30px;
    }

    .topic-container {
      margin-bottom: 20px;
    }

    .topic-title {
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 10px;
      color: #343a40;
    }

    .subtopic-list {
      padding-left: 20px;
    }

    .subtopic-list li {
      list-style-type: circle;
    }

    /* Custom Card Style */
    .card {
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
      background-color: #007bff;
      color: white;
      font-size: 1.2rem;
      font-weight: bold;
    }

    .card-body {
      background-color: #ffffff;
    }

    @media (max-width: 768px) {
      .topic-container {
        margin-bottom: 15px;
      }

      .card-header {
        font-size: 1rem;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <h1 class="text-center mb-5">Topics and Subtopics</h1>
    <div class="row">
      <!-- <% topics.forEach((topic) => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card topic-container">
            <div class="card-header">
              <%= topic.topicName %>
            </div>
            <div class="card-body">
              <ul class="subtopic-list">
                <% subTopics.forEach((subTopic) => { %>
                  <% if (subTopic.topicId && subTopic.topicId.toString() === topic._id.toString()) { %>
                    <li><%= subTopic.subTopicName %></li>
                  <% } %>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
      <% }); %> -->
      <% subTopics.forEach((topic) => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card topic-container">
            <div class="card-header">
              <%= topic.topicId.topicName %>
            </div>
            <div class="card-body">
              <ul class="subtopic-list">
                <%= topic.subTopicName %>
              </ul>
              <!-- <a href="deleteSubTopicCon/<%= topic._id %>" class="btn btn-danger">Delete</a> -->
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>
